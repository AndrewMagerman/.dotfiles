#!/bin/sh
# Install tmux plugins in a headless way

set -e

# Start a new tmux server in the background
tmux start-server

# Create a new session, install plugins, then kill the session
tmux new-session -d -s temp_plugin_install \
  'tmux run-shell ~/.config/tmux/plugins/tpm/bindings/install_plugins && \
   tmux kill-session -t temp_plugin_install'

echo "tmux plugins installation started in the background."
