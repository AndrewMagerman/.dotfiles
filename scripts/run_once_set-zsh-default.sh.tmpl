#!/bin/sh

# Only attempt if we're not already using zsh
if [ "$SHELL" != "$(command -v zsh)" ]; then
  echo "Setting zsh as default shell..."
  if command -v chsh >/dev/null 2>&1; then
    chsh -s "$(command -v zsh)" || echo "⚠️ chsh failed (non-interactive shell?)"
  else
    echo "⚠️ chsh not available"
  fi
fi

