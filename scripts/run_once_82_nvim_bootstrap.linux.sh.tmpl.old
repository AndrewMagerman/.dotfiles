#!/bin/bash
set -euxo pipefail

echo "üß† Bootstrapping Neovim plugins, Mason, and Treesitter..."
exit 0

# headless Neovim call that waits for lazy.nvim to install plugins
nvim --headless "+Lazy! restore" +qall || echo "‚ö†Ô∏è lazy.nvim bootstrap failed"

# optional: run MasonInstall to ensure LSPs
nvim --headless "+MasonInstall lua_ls pyright bashls jsonls" +qall || echo "‚ö†Ô∏è Mason LSP install failed"

# optional: Treesitter parsers
nvim --headless "+TSUpdateSync" +qall || echo "‚ö†Ô∏è Treesitter update failed"

echo "‚úÖ Neovim bootstrap completed"

