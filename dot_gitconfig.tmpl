[user]
        name = Andrew Magerman 
	{{ if eq .chezmoi.hostname "imsaho" }}
        email = andrew.magerman@magerman.com
	{{ else if eq .chezmoi.hostname "w013bl-wsl" }}
	email = andrew.magerman@postfinance.ch
	{{ else }}
        email = andrew.magerman@magerman.com
	{{ end }} 
[core]
	longpaths = true
	preloadindex = true
	fscache = true
	{{ if eq .chezmoi.hostname "imsaho" }}
	autocrlf = input
	{{ else if eq .chezmoi.hostname "w013bl-wsl" }}
	autocrlf = true
	{{ else }}
	autocrlf = input
	{{ end }} 
[http]
	{{ if eq .chezmoi.hostname "imsaho" }}
	sslVerify = true
	proxy = 
	{{ else if eq .chezmoi.hostname "w013bl-wsl" }}
	sslVerify = false
	sslBackend = schannel
	proxy = http://magermana@outproxy2.pnet.ch:3128
	{{ end }} 
[log]
	mailmap = true
[alias]
	ca = commit -a -m
	yeet = !git branch --merged| egrep -v "release" | xargs git branch --delete
	graph = log --graph --abbrev-commit --decorate --format=format:'%C(bold blue)%h%C(reset) - %C(bold green)(%ar)%C(reset) %C(white)%s%C(reset) %C(dim white)- %an%C(reset)%C(bold yellow)%d%C(reset)' --all
[push]
	default = current
[credential "http://outproxy2.pnet.ch:3128"]
	provider = generic
[safe]
	directory = C:/Users/magermana/AppData/Local/Programs/Git/isynth_envs/pf_model
	directory = *
[credential]
	helper = manager
[gc]
	auto = 256
[difftool "sourcetree"]
	cmd = "'' "
[mergetool "sourcetree"]
	cmd = "'' "
	trustExitCode = true
